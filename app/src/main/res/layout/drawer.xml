<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bitmap"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include layout="@layout/nav_header_main" android:layout_width="match_parent" android:layout_height="100dp"></include>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="手机号"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/setphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="EMAIL"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/setemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="密码"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/setpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="出生日期"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/setinitdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_men"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="男"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/radio_women"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="女"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RadioGroup>

    <Button
        android:id="@+id/user_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_buttton_background"
        android:text="修改"
        android:textColor="#fff"
        android:textSize="18sp"/>
</LinearLayout>